{
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": false,
        "editor.formatOnType": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "flake8.args": [
        "--config=.flake8"
    ],
    "black-formatter.args": [
        "--line-length=88"
    ],
    "isort.args": [
        "--settings-file",
        ".isort.cfg"
    ],
}
